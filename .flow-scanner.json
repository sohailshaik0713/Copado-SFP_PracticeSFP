{
  "rules": {
    "APIVersion": {
      "severity": "warning"
    },
    "CopyAPIName": {
      "severity": "error"
    },
    "DMLStatementInLoop": {
      "severity": "note"
    },
    "DuplicateDMLOperation": {
      "severity": "note"
    },
    "FlowDescription": {
      "severity": "note"
    },
    "FlowName": {
      "severity": "warning"
    },
    "HardcodedId": {
      "severity": "warning"
    },
    "MissingFaultPath": {
      "severity": "error"
    },
    "MissingNullHandler": {
      "severity": "warning"
    },
    "SOQLQueryInLoop": {
      "severity": "warning"
    },
    "UnconnectedElement": {
      "severity": "warning"
    },
    "UnusedVariable": {
      "severity": "error"
    }
  }
}
